#include <stdio.h>
  
int fact(int);  
  
int main()  
{  
    int n;  
  
    printf("Enter a positive number : ");  
    scanf("%d", &n);  
  
    printf("\nFactorial of %d is %d\n", n, fact(n));  
  
    return 0;  
}  
  
int fact(int n)  
{  
    if(n)  
        return(n * fact(n - 1));  
    else  
        return 1;  
} 
